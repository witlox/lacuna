# Lacuna Production Environment Variables
# Copy this file to .env and configure for your environment

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=lacuna
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=lacuna

# Connection pooling
POSTGRES_MAX_CONNECTIONS=200

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# =============================================================================
# Lacuna API Configuration
# =============================================================================
LACUNA_ENVIRONMENT=production
LACUNA_DEBUG=false

# Secret key for session signing (generate with: openssl rand -hex 32)
LACUNA_SECRET_KEY=CHANGE_ME_SECRET_KEY

# Logging
LACUNA_LOGGING_LEVEL=INFO
LACUNA_LOGGING_FORMAT=json

# =============================================================================
# Classification Settings
# =============================================================================
# Enable embedding-based classification (requires more resources)
LACUNA_CLASSIFICATION_EMBEDDING_ENABLED=false

# Model endpoint for embeddings (if enabled)
# LACUNA_CLASSIFICATION_MODEL_ENDPOINT=http://model-server:8080

# =============================================================================
# Policy Engine
# =============================================================================
LACUNA_POLICY_ENABLED=true

# =============================================================================
# Performance Tuning
# =============================================================================
# Number of Uvicorn workers (typically 2-4 x CPU cores)
LACUNA_WORKERS=4

# Request timeout in seconds
LACUNA_REQUEST_TIMEOUT=30

# =============================================================================
# TLS/SSL (for production)
# =============================================================================
# LACUNA_TLS_CERT_PATH=/certs/tls.crt
# LACUNA_TLS_KEY_PATH=/certs/tls.key

# =============================================================================
# External Services (if not using bundled containers)
# =============================================================================
# EXTERNAL_POSTGRES_HOST=your-postgres.example.com
# EXTERNAL_POSTGRES_PORT=5432
# EXTERNAL_REDIS_HOST=your-redis.example.com
# EXTERNAL_REDIS_PORT=6379
