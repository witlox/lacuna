# Lacuna Development Environment Configuration
# Copy this file to .env and customize as needed

# Environment
LACUNA_ENVIRONMENT=development
LACUNA_DEBUG=true

# Database (SQLite for development)
LACUNA_DATABASE__URL=sqlite:///data/lacuna_dev.db

# Redis (disabled - uses in-memory fallback)
LACUNA_REDIS__ENABLED=false

# Classification (disable heavy classifiers)
LACUNA_CLASSIFICATION__EMBEDDING_ENABLED=false
LACUNA_CLASSIFICATION__LLM_ENABLED=false

# Policy Engine (disabled for development)
LACUNA_POLICY__ENABLED=false

# Monitoring (disabled for development)
LACUNA_MONITORING__ENABLED=false

# Logging
LACUNA_LOG_FORMAT=text
LACUNA_LOG_LEVEL=DEBUG

# API Server
LACUNA_API__HOST=127.0.0.1
LACUNA_API__PORT=8000

# Optional: OpenAI for LLM classification
# LACUNA_OPENAI__API_KEY=sk-...

# Optional: Hugging Face for embedding models
# LACUNA_HUGGINGFACE__API_KEY=hf_...
